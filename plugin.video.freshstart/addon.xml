<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.freshstart"
	name="XBMC Fresh Start"
	version="1.0.3"
	provider-name="xbmchub.com">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XBMC Fresh Start</summary>
    <description lang="en">Easily Factory Restore your XBMC Configuration in One Simple Click! This tool will bring your XBMC back to its original installation state, deleting all customizations and add-ons you may have previously enabled, giving you a fresh start!</description>
    <platform>all</platform>
    <forum>http://www.xbmchub.com/forums/official-xbmc-hub-repo/</forum>
    <website>http://www.xbmchub.com/</website>
  </extension>
</addon>
